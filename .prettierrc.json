{
  "singleQuote": true,
  "trailingComma": "none",
  "endOfLine": "auto",
  "tabWidth": 2,
  "printWidth": 140,
  "overrides": [
    {
      "files": "src/**/*.html",
      "options": {
        "printWidth": 140
      }
    }
  ],
  "useTabs": false,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "bracketSameLine": true
}
